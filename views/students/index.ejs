<!DOCTYPE html>
<html>
  <head>
    <title>List</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <h3><a href="/students/create">Create</a></h3>
      <h1>List</h1>
      <% if(students.length>0) { %>
      <table class="list-table">
        <thead>
          <tr>
            <th>Student Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Class</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<students.length;i++) { %>
            <tr>
              <td><a href="/students/show/<%= students[i]._id%>"><%= students[i].name%></a></td>
              <td><%= students[i].age%></td>
              <td><%= students[i].gender%></td>
              <td><%= students[i].className%></td>
              <td><%= students[i].email%></td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <% } else { %>
        <div>No students found.</div>
      <% } %>
    </div>
  </body>
</html>
